{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"lib": ["esnext", "dom", "dom.iterable", "scripthost"],
		"types": ["vite/client", "node", "webpack"],
		"typeRoots": ["src/types"],
		"baseUrl": ".",
		"paths": {
			"@owl": ["src/index"],
			"@owl/*": ["src/*"],
			"@types": ["src/types/index"],
			"@types/*": ["src/types/*"],
			"@yiird/owl": ["src/index"]
		}
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src-example/**/*.ts",
		"src-example/**/*.d.ts",
		"src-example/**/*.tsx",
		"src-example/**/*.vue",
		"docs/**/*.ts",
		"docs/**/*.d.ts",
		"docs/**/*.tsx",
		"docs/**/*.vue",
		"docs/.vitepress/**/*.ts",
		"docs/.vitepress/**/*.d.ts",
		"docs/.vitepress/**/*.tsx",
		"docs/.vitepress/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"**/wepack.*.ts"
	],
	"exclude": ["node_modules", "build"]
}
